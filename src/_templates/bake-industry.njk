{% extends '_templates/base.njk' %}
{% set relative_path = "../" %}
{% from '_macros/prose.njk' import prose %}

{% block page_title %}{{ headline }}{% endblock %}

{% block page_description %}{{ headline }} Insights from aviation professionals. {% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
      <div class="col-sm-4">
        <hr class="d-sm-none">
        <figure>
          <img src="../img/{{ image }}" alt="{{ caption }}" class="img-fluid mb-4" style="width: 100%;">
          <figcaption>{{ caption }}</figcaption>
        </figure>
      </div>
      <div class="col-sm-8">
        <h1>{{ headline }}</h1>
        {{ prose(post) }}
      </div>
    </div>
  </article>
{% endblock %}



