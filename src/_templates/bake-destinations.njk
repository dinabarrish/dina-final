{% extends '_templates/base.njk' %}
{% set relative_path = "../" %}
{% from '_macros/prose.njk' import prose %}

{% block page_title %}{{ headline }}{% endblock %}

{% block page_description %}{{ headline }} Destinations{% endblock %}

{% block content %}
  <article class="container">
    <div class="row">
      <div class="col-sm-4 mb-4">
        <img src="../img/{{ image }}" alt="image" class="img-fluid" style="width: 100%; height: 600px; object-fit: cover;">
      </div>
      <div class="col-sm-8">
        <h1>{{ headline }}</h1>
        {{ prose(post) }}
      </div>
    </div>
  </article>
{% endblock %}

