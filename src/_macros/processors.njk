{% macro raw(value) %}
{{ value }}
{% endmacro %}

{% macro text(value) %}
<p>{{ value | safe }}</p>
{% endmacro %}

{% macro bighead(value) %}
<h2>{{ value | safe }}</h2>
{% endmacro %}

{% macro subhead(value) %}
<h3>{{ value | safe }}</h3>
{% endmacro %}

{% macro littlehead(value) %}
<h4>{{ value | safe }}</h4>
{% endmacro %}

{% macro img(value) %}
<img src="img/{{ value.filename }}" alt="{{ value.alt }}" class="img-fluid">
{% endmacro %}

{% macro list(value) %}
<ul>
  {% for item in value %}
  <li>{{ item.value | safe }}</li>
  {% endfor %}
</ul>
{% endmacro %}
